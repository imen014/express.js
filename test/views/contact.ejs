<!-- views/contact.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact</title>
</head>
<body>
  <h1>Contactez-nous</h1>
  <form action="/contact" method="post" enctype="multipart/form-data">
    <label for="name">Nom :</label>
    <input type="text" id="name" name="name" required><br>
    
    <label for="email">Email :</label>
    <input type="email" id="email" name="email" required><br>

    <label for="message">Message :</label>
    <textarea id="message" name="message" required></textarea><br>

    <label for="avatar">Téléchargez votre avatar :</label>
    <input type="file" id="avatar" name="avatar"><br>

    <label for="best_freind_name">Nom de votre ami proche:</label>
    <input type="text" id="best_freind_name" name="best_freind_name" required><br>

    <label for="voiture_voisin">quelle marque voiture pour votre voisin?</label>
    <input type="text" id="voiture_voisin" name="voiture_voisin" required><br>


    <button type="submit">Envoyer</button>
  </form>
</body>
</html>
